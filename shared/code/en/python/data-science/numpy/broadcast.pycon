>>> a, b = np.arange(3), np.arange(3)[:, np.newaxis]; a, b
(array([0, 1, 2]), array([[0],
                          [1],
                          [2]]))
>>> a.shape, b.shape, np.broadcast_shapes(a.shape, b.shape)
((3,), (3, 1), (3, 3))

>>> np.broadcast_to(a, (3, 3))
array([[0, 1, 2],
       [0, 1, 2],
       [0, 1, 2]])

>>> np.broadcast_to(b, (3, 3))
array([[0, 0, 0],
       [1, 1, 1],
       [2, 2, 2]])

>>> a + b
array([[0, 1, 2],
       [1, 2, 3],
       [2, 3, 4]])
